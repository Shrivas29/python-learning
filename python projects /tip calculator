print("welcome to the tip calculator!")

num_char = input("what is your total bill?")
#print(type(num_char))

new_num_char = int(num_char)
tip = input("how much amount you would like to tip? 10, 12, or 15?")

new_tip = int(tip)

people = input("how many people to split the bill?")

new_people = int(people)

a_tip = new_tip / 100

b_tip = a_tip * new_num_char

c_tip = new_num_char + b_tip

d_tip = c_tip/new_people

e_tip = round(d_tip, 2)

print(f"each person has to pay{e_tip}")
